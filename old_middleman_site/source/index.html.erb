---
pageable: true
---

<div class="main-post-list">

  <ol class="post-list">
    <% page_articles.each_with_index do |article, i| %>
      <% date = article.date.strftime('%e %b %Y') %>
      <li>
        <h2 class="post-list__post-title post-title">
          <%= link_to article.title, article %>
        </h2>
        <p class="excerpt"><%=  article.summary(250) %></p>
        <div class="post-list__meta">
          <time datetime="<%= date %>" class="post-list__meta--date date">
            <%= date %>
          </time>
        </div>
        <hr class="post-list__divider" />
      </li>
    <% end %>
  </ol>


  <% if paginate && num_pages > 1 %>

    <nav class="pagination" role="navigation">
      <% if prev_page %>
        <%= link_to '&larr; Newer Posts', prev_page, class: "newer-posts pagination__newer btn btn-small btn-tertiary" %>
      <% end %>

      <span class="pagination__page-number">Page <%= page_number %> of <%= num_pages %></span>

      <% if next_page %>
        <%= link_to 'Older Posts &rarr;', next_page, class: 'older-posts pagination__older btn btn-small btn-tertiary' %>
      <% end %>
    </nav>

  <% end %>
</div>
